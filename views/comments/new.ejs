<%- include ("../partials/header"); -%>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <%=post.name%></h1>

        <div style="width: 30%; margin: 25px auto;">

            <form action="/posts/<%=post._id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Add a comment..." required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            
            <a href="/posts/<%=post._id%>">Back</a>

        </div>

    </div>
</div>

<%- include ("../partials/footer"); -%>